<!DOCTYPE html>
<html lang="en">
<%- include('./head.ejs') %>
<body>
    <!-- dynamic variable -->
    <% const name = 'mario' %>
    <p><%= name %></p>
            <!--Partial templates - reduce redundancy,= escape string characters -->
            <%- include('./nav.ejs') %>
    <div>

    
        <div class="blogs content">
            <h2>All Blogs</h2>
            <% if(blogs.length > 0){ %>
                <!--Foreach is for arrays-->
                <% blogs.forEach(blog => { %>
                  <a class="single" href="/blogs/<%=blog._id%>">
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="text"><%= blog.snippet %></p>
                  </a>
                <% }) %>
                <% } else {  %>
                    <p> There are no blocks to display </p>
                    <% } %>
        </div>
    </div>
    <%-include('./footer.ejs') %>
</body>
</html>